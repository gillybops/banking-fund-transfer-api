{
  "info": {
    "name": "Banking Fund Transfer API",
    "description": "Complete API collection for testing the Banking Fund Transfer API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "admin",
        "type": "string"
      },
      {
        "key": "password",
        "value": "admin",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "account1",
      "value": "",
      "type": "string"
    },
    {
      "key": "account2",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Account Management",
      "item": [
        {
          "name": "Create Account - Alice",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"account1\", jsonData.accountNumber);",
                  "    console.log(\"Account 1 created: \" + jsonData.accountNumber);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountHolderName\": \"Alice Smith\",\n  \"initialBalance\": 5000.00,\n  \"currency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts"]
            }
          }
        },
        {
          "name": "Create Account - Bob",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"account2\", jsonData.accountNumber);",
                  "    console.log(\"Account 2 created: \" + jsonData.accountNumber);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accountHolderName\": \"Bob Johnson\",\n  \"initialBalance\": 3000.00,\n  \"currency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts"]
            }
          }
        },
        {
          "name": "Get All Accounts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts"]
            }
          }
        },
        {
          "name": "Get Account Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts/{{account1}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts", "{{account1}}"]
            }
          }
        },
        {
          "name": "Get Account Balance",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/accounts/{{account1}}/balance",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "accounts", "{{account1}}", "balance"]
            }
          }
        }
      ]
    },
    {
      "name": "Fund Transfers",
      "item": [
        {
          "name": "Successful Transfer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromAccountNumber\": \"{{account1}}\",\n  \"toAccountNumber\": \"{{account2}}\",\n  \"amount\": 500.00,\n  \"description\": \"Payment for services\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/transfers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transfers"]
            }
          }
        },
        {
          "name": "Transfer - Insufficient Funds",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromAccountNumber\": \"{{account1}}\",\n  \"toAccountNumber\": \"{{account2}}\",\n  \"amount\": 99999.00,\n  \"description\": \"Should fail - insufficient funds\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/transfers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transfers"]
            }
          }
        },
        {
          "name": "Transfer - Invalid Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromAccountNumber\": \"{{account1}}\",\n  \"toAccountNumber\": \"9999-9999-9999\",\n  \"amount\": 100.00,\n  \"description\": \"Should fail - account not found\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/transfers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transfers"]
            }
          }
        },
        {
          "name": "Transfer - Same Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromAccountNumber\": \"{{account1}}\",\n  \"toAccountNumber\": \"{{account1}}\",\n  \"amount\": 100.00,\n  \"description\": \"Should fail - same account\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/transfers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "transfers"]
            }
          }
        }
      ]
    }
  ]
}
